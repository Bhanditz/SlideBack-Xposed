<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/item_about_dialog_padding_vertical"
    android:paddingLeft="@dimen/item_about_dialog_padding_horizontal"
    android:paddingRight="@dimen/item_about_dialog_padding_horizontal"
    android:paddingTop="@dimen/item_about_dialog_padding_vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/font_subhead" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_body" />
</LinearLayout>